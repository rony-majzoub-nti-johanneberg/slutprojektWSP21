header 
    div class="header-left"
        a href="/store" 
            h2 Webshop
    div class="header-right"
      - if session[:id] == 1
         a href="/upload" 
            img src="img/add.svg" alt=""/
      a href="/order" 
         img src="img/cart.svg" alt=""/
